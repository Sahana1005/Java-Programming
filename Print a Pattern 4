import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        char c='A';
        if(n>=0 && n<=9){
            for(int i=0;i<n;i++){
                for(int j=0;j<=i;j++){
                    System.out.print(c+" ");
                    c++;
                }
                System.out.println();
            }
        }
        else
            System.out.println("Invalid Input");
    }
}
